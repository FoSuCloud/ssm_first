<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssm.mapper.UserMapper">

    <insert id="saveUser" parameterType="User">
        insert into user(
			nickname,
			number,
			password,
			address
		)values(
			#{nickname},
			#{number},
			#{password},
			#{address}
		)
    </insert>
    <delete id="delete" parameterType="int" >
	        delete from user where id= #{id}   
	</delete>
	<!-- 没有参数就不用给parameterType，resultType是返回数据类型 -->
    <select id="findAll" resultType="User">
        select * from   user    
    </select>

    <update id="update" parameterType="User" >
        update user set nickname=#{nickname},number=#{number},password=#{password},address=#{address} where id=#{id}    
    </update>
    <!-- 仅仅更新一个参数，如openid -->
    <update id="nickname_update" >
        update user set nickname=#{1} where id=#{0}    
    </update>
    
    <select id="list" resultType="User">
        select * from   user      
    </select>
    <!-- 传入参数为int -->
    <select id="get" parameterType="int" resultType="User">
        select * from   user  where id=#{id}    
    </select>
    
    <select id="get_pass"  resultType="User">
        select * from  user  where number=#{number} and password=#{password}
    </select>
</mapper>
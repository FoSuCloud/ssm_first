<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssm.mapper.CustomerMapper">

    <insert id="saveCustomer" parameterType="Customer">
        insert into t_customer(
			name,
			gender,
			telephone,
			address
		)values(
			#{name},
			#{gender},
			#{telephone},
			#{address}
		)
    </insert>
    <delete id="delete" parameterType="int" >
	        delete from t_customer where id= #{id}   
	    </delete>
	    <!-- 没有参数就不用给parameterType，resultType是返回数据类型 -->
    <select id="findAll" resultType="Customer">
        select * from   t_customer    
    </select>

    <update id="update" parameterType="Customer" >
        update t_customer set name=#{name},gender=#{gender},telephone=#{telephone},address=#{address} where id=#{id}    
    </update>
    <select id="list" resultType="Customer">
        select * from   t_customer      
    </select>
    <!-- 传入参数为int -->
    <select id="get" parameterType="int" resultType="Customer">
        select * from   t_customer  where id=#{id}    
    </select>
</mapper>